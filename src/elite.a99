                                                           ; 
                                                           ; * 0 = Rich Industrial
                                                           ; * 1 = Average Industrial
                                                           ; * 2 = Poor Industrial
                                                           ; * 3 = Mainly Industrial
                                                           ; * 4 = Mainly Agricultural
                                                           ; * 5 = Rich Agricultural
