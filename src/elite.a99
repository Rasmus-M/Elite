       movb ra,@XX15+1                 ; STA XX15+1        ; XX15+1 now has the sign of the vertex's x-coordinate

       .asla                           ; ASL A             ; Shift A left and store it, so XX15+3 now has the sign
       movb ra,@XX15+3                 ; STA XX15+3        ; of the vertex's y-coordinate

